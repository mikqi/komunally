extends layout

block content
  .container.mt-3
    .row
      .col-md-9

        .card.flex-md-row.mb-4.box-shadow.h-md-250
          .card-body.d-flex.flex-column.align-items-start
            strong.d-inline-block.mb-2.text-success
              | Category
              a.badge.badge-secondary.badge-pill.badge-info.text-white.ml-4(href="#") #social

            h3.mb-0
              a.text-dark(href='#') Event
            .mb-1.text-muted &nbsp;
            p.card-text.mb-auto
              | This is a wider card with supporting text below as a natural lead-in to additional content.
            p.card-text.mb-auto.mt-3
              | Allies

            .d-flex.justify-content-between.align-items-center.mt-3
              img.mr-2.img-fluid.rounded-circle.w-75(src="https://source.unsplash.com/random/45x45", alt="sponshorship")
              img.mr-2.img-fluid.rounded-circle.w-75(src="https://source.unsplash.com/random/45x45", alt="sponshorship")
              img.mr-2.img-fluid.rounded-circle.w-75(src="https://source.unsplash.com/random/45x45", alt="sponshorship")
              img.mr-2.img-fluid.rounded-circle.w-75(src="https://source.unsplash.com/random/45x45", alt="sponshorship")
            a.btn.btn-primary.btn-block.mt-5(href='#') Help

        .card.flex-md-row.mb-4.box-shadow.h-md-250
          .card-body.d-flex.flex-column.align-items-start
            strong.d-inline-block.mb-2.text-success Category
            h3.mb-0
              a.text-dark(href='#') Event
            .mb-1.text-muted &nbsp;
            p.card-text.mb-auto
              | This is a wider card with supporting text below as a natural lead-in to additional content.

        .card.flex-md-row.mb-4.box-shadow.h-md-250
          .card-body.d-flex.flex-column.align-items-start
            strong.d-inline-block.mb-2.text-success Category
            h3.mb-0
              a.text-dark(href='#') Event
            .mb-1.text-muted &nbsp;
            p.card-text.mb-auto
              | This is a wider card with supporting text below as a natural lead-in to additional content.
      .col-md-3
        .card.flex-md-row.mb-4.box-shadow.h-md-250
          .card-body.d-flex.flex-column.align-items-center.justify-content-center
            img.img-fluid.rounded-circle.w-75(src="https://source.unsplash.com/random/300x300", alt="avatar")
            //- strong.d-inline-block.mb-2.mt-2 Community Name
            h4.mb-0.mt-3
              a.text-dark(href='#') #{community.name}
            - event = 'event name'
            p.card-text.mb-auto.mt-0.text-muted
              a.badge.badge-secondary.badge-pill.text-white.mr-1(href="#") #social
              a.badge.badge-secondary.badge-pill.text-white.mr-1(href="#") #environment
            p.mt-2.text-small
              | #{community.description ? community.description : 'No description.'}
            //- .d-flex.justify-content-between.align-items-center.mt-3.mb-3(style="width: 130px")
              //- add class `TEXT-PRIMARY` if no need to looking again
              i.fa.fa-money-bill-alt.fa-lg.text-primary(
                data-toggle="tooltip"
                data-placement="top"
                title="Founded"
              )
              i.fa.fa-building.fa-lg.text-muted(
                data-toggle="tooltip"
                data-placement="top"
                title="Need Vanue"
              )
              i.fa.fa-camera-retro.fa-lg.text-primary(
                data-toggle="tooltip"
                data-placement="top"
                title="Has Branding"
              )
              i.fa.fa-users.fa-lg.text-muted(
                data-toggle="tooltip"
                data-placement="top"
                title="Need Human Resources"
              )

